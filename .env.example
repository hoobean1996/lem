# Application
ENV=local
APP_NAME=Lemonade API
DEBUG=true
API_VERSION=v1
API_BASE_URL=http://localhost:8080
PORT=8000

# Database (matches `make db` configuration)
DATABASE_URL=postgres://lem:lem@localhost:5432/lem?sslmode=disable

# JWT
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Google OAuth
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx

# Google Cloud Storage
GCS_CREDENTIALS_PATH=resources/gcs/credentials.json
GCS_BUCKET_NAME=lemonade-files

# Google Analytics 4
GA_MEASUREMENT_ID=G-XXXXXXX
GA_API_SECRET=xxx

# Google Marketplace (optional)
GOOGLE_MARKETPLACE_APP_ID=

# SMTP (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=email@gmail.com
SMTP_PASSWORD=app-password
SMTP_FROM_EMAIL=email@gmail.com
SMTP_FROM_NAME=Lemonade

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin (comma-separated emails)
ADMIN_EMAILS=admin@example.com
